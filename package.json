{
  "name": "ab1-reader",
  "version": "0.1.0",
  "description": "Modern AB1/ABIF chromatogram file reader and editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "ab1",
    "abif",
    "chromatogram",
    "dna-sequencing",
    "bioinformatics",
    "sanger-sequencing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "23.1.3",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.3.0",
    "axios": "^1.3.4",
    "chokidar": "^3.6.0",
    "electron-store": "^8.1.0",
    "qs": "^6.11.1",
    "sqlite3": "^5.1.4",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.ab1reader.app",
    "productName": "AB1Reader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "render.html",
      "menu.js",
      "autocomplete.js",
      "figure.js",
      "js/**/*",
      "styles/**/*",
      "assets/**/*",
      "config/**/*"
    ],
    "fileAssociations": [
      {
        "ext": "ab1",
        "name": "AB1 Chromatogram File",
        "description": "Sanger sequencing chromatogram data",
        "mimeType": "application/octet-stream"
      }
    ],
    "icon": "assets/icons/icon_512.png",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable", "dir"],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Science",
      "icon": "assets/icons/icon_512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
